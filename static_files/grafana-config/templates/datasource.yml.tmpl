apiVersion: 1

datasources:
  - name: Prometheus
    uid: PBFA97CFB590B2093
    type: prometheus
    access: proxy
    orgId: 1
    url: {{ .PrometheusURL }}
    basicAuth: false
    isDefault: true
    editable: true
{{- if .PyroscopeURL }}
  - name: Pyroscope
    uid: pyroscope
    type: grafana-pyroscope-datasource
    access: proxy
    orgId: 1
    url: {{ .PyroscopeURL }}
    basicAuth: false
    isDefault: false
    editable: true
{{- end }}
{{- if .TempoURL }}
  - name: Tempo
    type: tempo
    access: proxy
    orgId: 1
    url: {{ .TempoURL }}
    basicAuth: false
    isDefault: false
    editable: true
    jsonData:
      httpMethod: GET
      tracesToLogs:
        datasourceUid: 'Prometheus'
        spanStartTimeShift: '1h'
        spanEndTimeShift: '1h'
        filterByTraceID: true
{{- if $.PyroscopeURL }}
      tracesToProfiles:
        datasourceUid: 'pyroscope'
        tags:
          - key: 'service.name'
            value: 'service_name'
        profileTypeId: 'process_cpu:cpu:nanoseconds:cpu:nanoseconds'
        customQuery: true
        query: '{service_name="${__span.tags["service.name"]}"}'
{{- end }}
{{- end }}
