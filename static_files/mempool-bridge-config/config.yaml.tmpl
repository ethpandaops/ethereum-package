logging: "debug"
metricsAddr: ":{{ .ListenPortNum }}"

mode: "p2p"

{{- if .SourceEndpoints }}
source:
  retryInterval: 30s
  nodeRecords:
{{- range $endpoint := .SourceEndpoints }}
{{- if $endpoint }}
    - "{{ $endpoint }}"
{{- end }}
{{- end }}
{{- end }}

target:
  retryInterval: 30s
  nodeRecords:
{{- range $endpoint := .TargetEndpoints }}
{{- if $endpoint }}
    - "{{ $endpoint }}"
{{- end }}
{{- end }}
